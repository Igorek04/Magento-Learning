<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block
                name="product.info.main.homework_currency_converter"
                template="Perspective_HomeworkCurrencyConverter::currency_converter.phtml"
                after="product.info.price"
                before="product.price.tier">
                <arguments>
                    <argument
                        name="viewModel"
                        xsi:type="object">Perspective\HomeworkCurrencyConverter\ViewModel\CurrencyConverter
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>