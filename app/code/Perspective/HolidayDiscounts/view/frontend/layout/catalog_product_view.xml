<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block
                name="Perspective_HolidayDiscounts_holiday_price_display"
                template="Perspective_HolidayDiscounts::holiday_price_display.phtml"
                after="product.info.price"
                before="product.price.tier">
                <arguments>
                    <argument
                        name="viewModel"
                        xsi:type="object">Perspective\HolidayDiscounts\ViewModel\HolidayPriceDisplay
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>