<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block
                name="Perspective_ProductPriceDetails"
                template="Perspective_ProductPriceDetails::price_details.phtml"
                after="product.info.price"
                before="product.price.tier">
                <arguments>
                    <argument
                        name="viewModel"
                        xsi:type="object">Perspective\ProductPriceDetails\ViewModel\PriceDetails
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>