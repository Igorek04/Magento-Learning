<page layout="1columns"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header.container">
            <block name="free.shipping.banner"
                template="Perspective_FreeShippingPromo::free-shipping-banner.phtml"
                before="-">
                <arguments>
                    <argument name="jsLayout" xsi:type="array">
                        <item name="components" xsi:type="array">
                            <item name="free-shipping-banner" xsi:type="array">
                                <item name="component" xsi:type="string">
                                    Perspective_FreeShippingPromo/js/free-shipping-banner
                                </item>

                                <item name="config" xsi:type="array">
                                    <item name="messageDefault" xsi:type="string">
                                        FREE shipping on orders over ${{freeShippingThreshold}}! 1v
                                    </item>
                                    <item name="messageItemsInCart" xsi:type="string">
                                        You're $XX.XX away from FREE shipping! 2v
                                    </item>
                                    <item name="messageFreeShipping" xsi:type="string">
                                        Your order now has FREE shipping! 3v
                                    </item>
                                </item>
                            </item>
                        </item>
                    </argument>
                    <argument name="shipping_config_view_model" xsi:type="object">
                        Perspective\FreeShippingPromo\ViewModel\ShippingConfig
                    </argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>