<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="checkout.cart.methods">
            <block name="phone-and-hours" template="Juno_Theme::footer/phone-number.phtml">
                <arguments>
                    <argument name="phone_number_view_model" xsi:type="object">
                        Juno\Theme\ViewModel\PhoneNumber</argument>
                </arguments>
            </block>
        </referenceContainer>

        <referenceContainer name="cart.summary">
            <container name="shipping-notice-container" htmlTag="div"
                       htmlClass="shipping-notice-container">
                <block name="shipping-notice" template="Juno_Theme::shipping-notice.phtml" />
            </container>
        </referenceContainer>
    </body>
</page>