<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="perspective_holidays" comment="Holiday Table">
        <column name="holiday_id" xsi:type="int" unsigned="true" nullable="false" identity="true" comment="ID"/>
        <column name="title" xsi:type="varchar" nullable="false" length="255" comment="Holiday Title"/>
        <column name="description" xsi:type="text" nullable="true" comment="Description"/>
        <column name="discount_rate" xsi:type="decimal" precision="5" scale="2" nullable="false" default="0.00" comment="Discount Rate (%)"/>
        <column name="status" xsi:type="smallint" nullable="false" default="1" comment="Status (1 - enabled, 0 - disabled)"/>
        <column name="start_date" xsi:type="date" nullable="false" comment="Start Date"/>
        <column name="current_day" xsi:type="date" nullable="true" comment="Holiday Exact Day"/>
        <column name="end_date" xsi:type="date" nullable="false" comment="End Date"/>

        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="holiday_id"/>
        </constraint>
    </table>
</schema>
